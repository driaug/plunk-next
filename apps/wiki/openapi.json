                  },
                  "templateId": {
                    "type": "string"
                  },
                  "segmentId": {
                    "type": "string"
                  },
                  "subject": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string",
                    "enum": ["DRAFT", "SCHEDULED"],
