{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "DATABASE_URL",
        "DIRECT_DATABASE_URL",
        "PLUNK_API_KEY",
        "NOTIFICATIONS_URL",
        "TYPESENSE_API_KEY",
        "JWT_SECRET",
        "ADMIN_PASSWORD",
        "REDIS_URL",
        "MAPBOX_TOKEN",
        "STRIPE_SK",
        "OTEL_EXPORTER_OTLP_ENDPOINT"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "sitemap": {
      "dependsOn": ["build"],
      "outputs": ["public/robots.txt", "public/sitemap*.xml"]
    },
    "deploy": {
      "dependsOn": ["build", "sitemap"],
      "outputs": []
    },
    "start": {
      "dependsOn": ["^start"],
      "env": [
        "JWT_SECRET",
        "DATABASE_URL",
        "DIRECT_DATABASE_URL",
        "REDIS_URL",
        "API_URI",
        "LANDING_URI",
        "APP_URI",
        "BROWSER_WS_ENDPOINT",
        "STRIPE_SK",
        "STRIPE_WEBHOOK_SECRET",
        "PLUNK_API_KEY",
        "NOTIFICATIONS_URL",
        "TYPESENSE_API_KEY",
        "ADMIN_PASSWORD",
        "NEXT_PUBLIC_API_URI",
        "POSTHOG_HOST",
        "POSTHOG_API_KEY",
        "MAPBOX_TOKEN",
        "OTEL_EXPORTER_OTLP_ENDPOINT"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false,
      "persistent": true
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:worker": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false,
      "persistent": true
    }
  }
}
